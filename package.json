{
  "name": "@42.nl/jarb-final-form",
  "version": "1.0.0",
  "description": "Validating forms through JaRB.",
  "files": [
    "lib"
  ],
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/42BV/jarb-final-form.git"
  },
  "keywords": [
    "JaRB",
    "final-form",
    "react-final-form"
  ],
  "author": "Maarten Hus",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/42BV/jarb-final-form/issues"
  },
  "homepage": "https://github.com/42BV/jarb-final-form#readme",
  "peerDependencies": {
    "final-form": "^4.18.5",
    "react-final-form": "^6.3.0"
  },
  "devDependencies": {
    "@types/enzyme-adapter-react-16": "1.0.5",
    "@types/fetch-mock": "7.3.1",
    "@types/jest": "24.0.18",
    "@types/lodash": "4.14.108",
    "@types/react": "16.9.5",
    "@types/react-dom": "16.9.1",
    "@typescript-eslint/eslint-plugin": "2.3.3",
    "@typescript-eslint/parser": "2.3.3",
    "enzyme": "3.10.0",
    "enzyme-adapter-react-16": "1.14.0",
    "eslint": "6.5.1",
    "eslint-config-prettier": "6.4.0",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-react": "7.16.0",
    "fetch-mock": "7.5.1",
    "final-form": "4.18.5",
    "husky": "3.0.8",
    "jest": "24.9.0",
    "lint-staged": "9.4.2",
    "lodash": "4.17.15",
    "node-fetch": "2.6.0",
    "np": "5.1.0",
    "prettier": "1.18.2",
    "react": "16.10.2",
    "react-dom": "16.10.2",
    "react-final-form": "6.3.0",
    "ts-jest": "24.1.0",
    "typescript": "3.6.3"
  },
  "scripts": {
    "start": "jest test --watch",
    "test": "npm run lint && jest test --coverage",
    "coverage": "npm test -- --coverage",
    "ts": "tsc --version && tsc",
    "lint": "eslint \"src/**\"",
    "prepare": "rm -rf lib && npm run lint && npm test && npm run ts",
    "release": "np --otp"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "<rootDir>/tsconfig.json"
      }
    },
    "collectCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "node"
    ],
    "transform": {
      "\\.(ts|tsx)$": "ts-jest"
    },
    "testRegex": "/tests/.*\\.(ts|tsx)$",
    "testPathIgnorePatterns": [
      "./tests/setupTest.ts"
    ],
    "setupFilesAfterEnv": [
      "./tests/setupTest.ts"
    ]
  },
  "lint-staged": {
    "{src,tests}/**/*.{js,jsx,json,scss,ts,tsx}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
